{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"files": {
		"ignoreUnknown": false,
		"includes": ["**/*", "!examples", "!packages/components/**/readme.md"]
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"root": true
}
