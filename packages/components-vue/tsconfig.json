{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "removeComments": false,
    "sourceMap": true,
    "jsx": "react",
    "target": "esnext",
    "types": [
      "jest"
    ]
  },
  "include": [
    "lib/**/*.ts",
    "lib/**/*.tsx"
  ],
  "exclude": [
    "./__tests__/**",
    "node_modules",
    "setupTests.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}