{
  "extends": "../../tsconfig.vue.json",
  "compilerOptions": {
    "outDir": "./dist",
    "lib": [
      "dom",
      "es2020"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es2017",
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
  },
  "include": [
    "lib"
  ],
  "exclude": [
    "node_modules"
  ]
}