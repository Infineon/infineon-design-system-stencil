{
  "extends": "../../tsconfig.react.json",
  "compilerOptions": {
    "outDir": "./dist",
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "Node16",  
    "moduleResolution": "node16",
    "target": "es2015",
    "skipLibCheck": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "declarationDir": "./dist/types",
    "esModuleInterop": true,
  },
  "include": [
    "lib"
  ],
  "exclude": [
    "node_modules"
  ]
}