{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"allowUnreachableCode": false,
		"declaration": false,
		"experimentalDecorators": true,
		"lib": ["dom", "es2022"],
		"types": ["node", "jest", "jest-stencil-runner"],
		"moduleResolution": "bundler",
		"module": "esnext",
		"target": "es2022",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"jsx": "react",
		"jsxFactory": "h",
		"jsxFragmentFactory": "h.Fragment",
		"skipLibCheck": true
	},
	"include": ["src", "types/**/*"],
	"exclude": [
		"node_modules",
		"**/*.stories.ts",
		"**/*.stories.tsx",
		"dist",
		"www"
	]
}
